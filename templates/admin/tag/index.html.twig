{% extends 'base.html.twig' %}

{% block title %}Tag index Admin{% endblock %}

{% block body %}
    <h1>Tag index</h1>
    <a href="{{ path('admin_tag_new') }}">Create new</a>

    <table class="table">
      
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('admin_tag_show', {'tag': tag.id}) }}">{{ tag.name }}</a>
                    <a href="{{ path('admin_tag_edit', {'id': tag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucun Tag </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
