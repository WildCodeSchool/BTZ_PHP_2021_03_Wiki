{% extends 'base.html.twig' %}

{% block title %}Articles en attente de validation
{% endblock %}

{% block body %}
	<!-- Page Heading/Breadcrumbs-->
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('home') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">Articles en attente de validation</li>
	</ol>
	
	<h1 class="mt-4 mb-3">
		Tous les articles en attente de validation
	</h1>
	<div class="row">
		{% for currentVersion in currentVersions %}
			<div class="col-lg-4 col-sm-6 mb-4">
				<div class="card h-100">
					<a href="{{ path('article_show', {'id': currentVersion.article.id}) }}"><img class="card-img-top" src="{{ vich_uploader_asset(currentVersion.article, 'imageFile') }}" width="50px" alt=" "/></a>
					<div class="card-body pb-5">
						<h4 class="card-title">
							<a href="{{ path('article_show', {'id': currentVersion.article.id}) }}">{{ currentVersion.article.title|capitalize }}</a>
						</h4>
						<small>{{currentVersion.article.getCreator.firstname}}
						{{currentVersion.article.getCreator.lastname}}</small>
						{% for category in currentVersion.article.categories %}
							<a href="{{ path('category_show', {'category': category.id}) }}" class="badge badge-info">{{category.name}}</a>
						{% endfor %}
						{% for tag in currentVersion.article.tags %}
							<a href="{{ path('tag_show', {'tag': tag.id}) }}" class="badge badge-dark">{{tag.name}}</a>
						{% endfor %}
						<p class="card-text pb-3 pt-3">{{ currentVersion.article.description|slice(0,100) }}</p>
						
                        <a class="btn btn-success position-absolute" style="bottom: 20px;" href="{{ path('version_validation', {'id': currentVersion.id}) }}">Valider l'article</a>
						<a class="btn btn-primary position-absolute" style="bottom: 20px;right: 20px;" href="{{ path('article_show', {'id': currentVersion.article.id}) }}">Lire la suite...</a>
					</div>
				</div>
			</div>
		{% else %}
			<div>
				<h2>Il n'y a pas d'article en attente de validation</td>
			</div>
		{% endfor %}
	</div>

	<!-- Pagination-->
	<ul class="pagination justify-content-center">
		{{ knp_pagination_render(currentVersions) }}
	</ul>
{% endblock %}
