{% extends 'base.html.twig' %}

{% block title %}
	{{article.title}}
{% endblock %}

{% block body %}
	<!-- Page Heading/Breadcrumbs-->
	<ol class="breadcrumb mb-4">
		<li class="breadcrumb-item">
			<a href="{{ path('home') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{ path('article_index') }}">Articles</a>
		</li>
		<li class="breadcrumb-item active">{{article.title}}</li>
	</li>
	<li class="breadcrumb-item active">Toutes les versions</li>
</ol>
<h1>{{article.title}}</h1>
<div>
	<ul class="list-unstyled">
		<u>Toutes les versions</u>:
		{% for version in allVersions %}

			<li>
				<span class="small">Date de modification:</span>
				<a href="{{ path('article_show', {'id': article.id, 'version_id': version.id}) }}">{{version.modificationDate|date('d-m-Y H:i')}}
				</a>
				{% if article.currentVersion == version.id %}
					<span class="small">(Version actuelle publi√©e).</span>
				{% else %}
				{% include 'version/_delete_form.html.twig' %}
				{% endif %}
			</li>
		{% endfor %}
	</ul>
</div>{% endblock %}
