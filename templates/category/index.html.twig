{% extends 'base.html.twig' %}

{% block title %}Themes Index {% endblock %}

{% block body %}

<!-- Page Heading/Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="{{ path('home') }}">Accueil</a>
    </li>
    <li class="breadcrumb-item active">Thèmes</li>
</ol>

<h1 class="mt-4 mb-3">Liste des Thèmes
</h1>

{% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('category_new') }}" class="btn btn-success mb-3">créer un thème</a>
{% endif %}

<div class="row">
    {% for category in categories %}
    <div class="col-lg-4 col-sm-6 mb-4">

        <div class="card text-center p-3" style="width: 18rem;"> <a
                href="{{ path('category_show', {'category': category.id}) }}">{{ category.name}} </a>
            <a>({{category.articles|length}})</a>
                
            {% if is_granted('ROLE_ADMIN') %}
            <div class="card-body">
                <div class="d-flex justify-content-around">
                <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-primary">éditer</a>

                {% if category.articles is empty %}
                <span>{{ include('category/_delete_form.html.twig') }}</span>
                </div>

                {% else %}
            
                <input type="button" class="btn btn-secondary" value="supprimer" disabled>
                </div>

                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
    {% else %}
    <div>
        <h2>Il n'y a pas de thème, contacter l'administrateur</h2>
    </div>
    {% endfor %}
</div>
<!-- Pagination-->
<ul class="pagination justify-content-center">
    {{ knp_pagination_render(categories) }}
</ul>
{% endblock %}