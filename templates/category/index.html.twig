{% extends 'base.html.twig' %}

{% block title %}Thèmes index{% endblock %}

{% block body %}
<h1>Thème index</h1>

{% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('category_new') }}">Create new</a>
{% endif %}


<table class="table">
    <tbody>
        {% for category in categories %}
        <tr>
            <td>
                <a href="{{ path('category_show', {'category': category.id}) }}">{{ category.name }}</a>

                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

                {% endif %}
            </td>

        </tr>
        {% else %}
        <tr>
            <td colspan="3">Aucun thème, contacter l'administrateur</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}