{% extends 'base.html.twig' %}

{% block title %}Theme{% endblock %}

{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="{{ path('home') }}">Accueil</a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('category_index')}}">Thèmes</a>
    </li>
    <li class="breadcrumb-item active">Articles</li>
</ol>

<h1>Thème</h1> 

<table class="table">
    <tbody>
        <tr>
            <th>{{category.name }}</th>
        </tr>
    </tbody>
</table>

<!-- liste des articles de la catégorie -->
<a>Articles :
    {% for article in category.articles %}
    <li>{{article.id}} - {{article.title}}</li>
    {% else %}
    <li>Aucun article pour ce thème</li>
    {% endfor %}
</a>

<a href="{{ path('category_index') }}">retour</a>

{% endblock %}