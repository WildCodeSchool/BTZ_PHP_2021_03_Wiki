{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<h1>Wiki</h1>
	{% for article in articles %}
		<div class="article-card">
			<p>{{ article.title }}</p>
			<p>{{ article.description }}</p>
			<p>{{ article.picture }}</p>
			<p>{{ article.isPublished ? '' : 'En attente de validation' }}</p>
			<p>{{ article.creationDate ? article.creationDate|date('Y-m-d H:i:s') : '' }}</p>
			<p>
				<a href="{{ path('article_show', {'id': article.id}) }}">Voir plus</a>
				{% if app.user %}
					<a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
				{% endif %}
			</p>
		</div>
	{% else %}
		<div>
			<p>Aucun article disponible</p>
		</div>
	{% endfor %}
{% endblock %}
