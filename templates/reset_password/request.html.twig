{% extends 'base.html.twig' %}

{% block title %}Reset Mot de Passe {% endblock %}

{% block body %}
<!-- Page Heading/Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="{{ path('home') }}">Accueil</a>
    </li>
    <li class="breadcrumb-item active">Réinitialisation du mot de passe</li>
</ol>
<h1 class="mt-4 mb-3">Réinitialisation du mot de passe
</h1>

<p>
     Veuillez entrer votre email de connexion au Wiki. </br>
     Nous vous enverrons un lien pour réinitialiser votre mot de passe.
    </p> 

{% for flashError in app.flashes('reset_password_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}


{{ form_start(requestForm) }}
{{ form_row(requestForm.email) }}

<a href="{{ path('home')}}" class="btn btn-primary">envoyer</a>

{{ form_end(requestForm) }}
{% endblock %}