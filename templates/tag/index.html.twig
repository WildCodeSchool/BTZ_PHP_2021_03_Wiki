{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
<h1>Tag index</h1>


{% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('tag_new') }}">Create new</a>
{% endif %}

<table class="table">

    <tbody>
        {% for tag in tags %}
        <tr>

            <td>
                <a href="{{ path('tag_show', {'tag': tag.id}) }}">{{ tag.name }}</a>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a>

                {% endif %}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="3">Aucun tag, contacter l'administrateur</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}