{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.cityAgency }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">retour</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">éditer</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
