{% extends 'base.html.twig' %}

{% block title %}Utilisateurs en attente de validation
{% endblock %}

{% block body %}
	<!-- Page Heading/Breadcrumbs-->
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('home') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{ path('user_index') }}">Utilisateurs</a>
		</li>
		<li class="breadcrumb-item active">En attente de validation</li>
	</ol>
	<h1>Utilisateurs en attente de validation</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Pr√©nom</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Structure</th>
				<th>Valider</th>
			</tr>
		</thead>
		<tbody>

			{% for user in users %}

				<tr>
					<td>{{ user.lastname }}</td>
					<td>{{ user.firstname }}</td>
					<td>{{ user.email }}</td>
					<td>
						{% for role in user.roles %}
							{% if role == "ROLE_USER" %}
								Utilisateur
							{% elseif role == "ROLE_EDITOR" %}
								Editeur
							{% elseif role == "ROLE_ADMIN" %}
								Administrateur
							{% endif %}
						{% endfor %}
					</td>					
					<td>{{ user.structure }}</td>
					<td>
						{{ form_start(forms[user.id]) }}
						{{ form_widget(forms[user.id]) }}
						<button class="btn" name="id" value={{user.id}}>{{ button_label|default('Enregistrer') }}</button>
						{{ form_end(forms[user.id]) }}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
