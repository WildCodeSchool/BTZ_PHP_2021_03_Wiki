{% extends 'base.html.twig' %}

{% block title %}Version{% endblock %}

{% block body %}
    <h1>Version</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ version.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ version.comment }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ version.content }}</td>
            </tr>
            <tr>
                <th>Modification_date</th>
                <td>{{ version.modificationDate ? version.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Is_validated</th>
                <td>{{ version.isValidated ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('version_index') }}">back to list</a>

    <a href="{{ path('version_edit', {'id': version.id}) }}">edit</a>

    {{ include('version/_delete_form.html.twig') }}
{% endblock %}
